{
  "name": "chittyauth",
  "version": "1.0.0",
  "description": "ChittyAuth - Authentication & Token Provisioning Service for ChittyOS",
  "main": "worker.js",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --env production",
    "deploy:dev": "wrangler deploy --env development",
    "build": "echo 'No build step required'",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/unit",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/integration",
    "setup:db": "wrangler d1 execute chittyauth-db --env production --file=./schema.sql",
    "setup:kv": "node scripts/setup-kv.js",
    "setup": "npm run setup:kv && npm run setup:db"
  },
  "keywords": [
    "chittyos",
    "authentication",
    "api-tokens",
    "cloudflare-workers",
    "authorization"
  ],
  "author": "ChittyCorp LLC",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240925.0",
    "wrangler": "^3.78.12",
    "jest": "^29.7.0"
  }
}
